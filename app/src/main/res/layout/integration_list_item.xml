<?xml version="1.0" encoding="utf-8"?><!-- http://stackoverflow.com/a/30384406/1768722 -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/medium_card_width"
    android:layout_height="@dimen/medium_card_height"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="@dimen/medium_card_width"
        android:layout_height="@dimen/medium_card_height"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/medium_avatar_size"
            android:layout_height="@dimen/medium_avatar_size"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="@dimen/avatar_margin"
            android:scaleType="centerCrop"
            android:src="@color/light_grey" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/medium_card_title_padding_top"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:textAppearance="@android:style/TextAppearance.Material.Caption" />
    </LinearLayout>
</android.support.v7.widget.CardView>