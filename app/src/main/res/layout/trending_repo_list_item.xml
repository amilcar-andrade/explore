<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="?android:listPreferredItemHeightLarge"
    android:paddingEnd="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <TextView
        android:id="@+id/repo_letter_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/padding_normal"
        android:layout_marginStart="@dimen/padding_normal"
        android:layout_marginTop="@dimen/avatar_padding"
        android:background="@drawable/repo_placeholder"
        android:gravity="center"
        android:padding="@dimen/avatar_padding"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        tools:text="A" />

    <TextView
        android:id="@+id/repo_name"
        style="@style/Widget.Explore.ListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/repo_letter_avatar"
        tools:text="@string/tools_placeholder_title" />

    <TextView
        android:id="@+id/repo_description"
        style="@style/Widget.Explore.ListItem.SecondaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/repo_name"
        android:layout_toEndOf="@id/repo_letter_avatar"

        tools:text="@string/tools_laceholder_description" />

</RelativeLayout>
